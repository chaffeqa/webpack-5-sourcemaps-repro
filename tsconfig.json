{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2017", "esnext.asynciterable", "dom", "ES2020.Promise"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "tmp/typescript-build/"
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", ".cache-loader", "jest"],
  "types": ["typePatches", "node", "webpack-env"],
  "include": ["typings/**/*.ts", "typings/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
